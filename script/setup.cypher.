// 1. LIMPAR O BANCO (Opcional: use apenas se quiser começar do zero)
MATCH (n) DETACH DELETE n;

// 2. CRIAR GÊNEROS
CREATE (rock:Genero {nome: 'Rock', clima: 'Energético'})
CREATE (pop:Genero {nome: 'Pop', clima: 'Dança'})
CREATE (jazz:Genero {nome: 'Jazz', clima: 'Relaxante'});

// 3. CRIAR ARTISTAS
CREATE (queen:Artista {nome: 'Queen', pais: 'Reino Unido'})
CREATE (mj:Artista {nome: 'Michael Jackson', pais: 'EUA'})
CREATE (davis:Artista {nome: 'Miles Davis', pais: 'EUA'});

// 4. CRIAR MÚSICAS E CONECTAR AOS ARTISTAS E GÊNEROS
CREATE (m1:Musica {titulo: 'Bohemian Rhapsody', duracao: '5:55'})
CREATE (m1)-[:PERTENCE_AO]->(rock)
CREATE (m1)-[:INTERPRETADA_POR]->(queen);

CREATE (m2:Musica {titulo: 'Don’t Stop Me Now', duracao: '3:29'})
CREATE (m2)-[:PERTENCE_AO]->(rock)
CREATE (m2)-[:INTERPRETADA_POR]->(queen);

CREATE (m3:Musica {titulo: 'Billie Jean', duracao: '4:54'})
CREATE (m3)-[:PERTENCE_AO]->(pop)
CREATE (m3)-[:INTERPRETADA_POR]->(mj);

CREATE (m4:Musica {titulo: 'So What', duracao: '9:22'})
CREATE (m4)-[:PERTENCE_AO]->(jazz)
CREATE (m4)-[:INTERPRETADA_POR]->(davis);

// 5. CRIAR USUÁRIOS
CREATE (u1:Usuario {nome: 'Carlos', idade: 28})
CREATE (u2:Usuario {nome: 'Ana', idade: 22})
CREATE (u3:Usuario {nome: 'Beatriz', idade: 35});

// 6. CRIAR RELACIONAMENTOS COM PROPRIEDADES (Interações)
// Carlos ouviu Queen muitas vezes
MATCH (u:Usuario {nome: 'Carlos'}), (m:Musica {titulo: 'Bohemian Rhapsody'})
CREATE (u)-[:OUVIU {vezes: 50, ultima_vez: '2023-12-01', gostou: true}]->(m);

MATCH (u:Usuario {nome: 'Carlos'}), (m:Musica {titulo: 'Don’t Stop Me Now'})
CREATE (u)-[:OUVIU {vezes: 30, ultima_vez: '2023-12-05', gostou: true}]->(m);

// Ana ouviu Queen e Michael Jackson
MATCH (u:Usuario {nome: 'Ana'}), (m:Musica {titulo: 'Bohemian Rhapsody'})
CREATE (u)-[:OUVIU {vezes: 5, ultima_vez: '2023-11-20', gostou: false}]->(m);

MATCH (u:Usuario {nome: 'Ana'}), (m:Musica {titulo: 'Billie Jean'})
CREATE (u)-[:OUVIU {vezes: 100, ultima_vez: '2023-12-08', gostou: true}]->(m);

// Beatriz segue artistas e ouve Jazz
MATCH (u:Usuario {nome: 'Beatriz'}), (a:Artista {nome: 'Miles Davis'})
CREATE (u)-[:SEGUE {desde: '2021-05-10'}]->(a);

MATCH (u:Usuario {nome: 'Beatriz'}), (m:Musica {titulo: 'So What'})
CREATE (u)-[:OUVIU {vezes: 20, gostou: true}]->(m);
